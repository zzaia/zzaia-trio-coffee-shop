{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch AppHost (Aspire)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-apphost",
      "program": "${workspaceFolder}/CoffeeShop/src/CoffeeShop.AppHost/bin/Debug/net9.0/CoffeeShop.AppHost.dll",
      "args": [],
      "cwd": "${workspaceFolder}/CoffeeShop/src/CoffeeShop.AppHost",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Launch BFF",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-bff",
      "program": "${workspaceFolder}/CoffeeShop/src/CoffeeShop.BFF/bin/Debug/net9.0/CoffeeShop.BFF.dll",
      "args": [],
      "cwd": "${workspaceFolder}/CoffeeShop/src/CoffeeShop.BFF",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5000"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/CoffeeShop/src/CoffeeShop.BFF/Views"
      }
    },
    {
      "name": "Launch Identity Service",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-identity",
      "program": "${workspaceFolder}/CoffeeShop/src/CoffeeShop.Identity/bin/Debug/net9.0/CoffeeShop.Identity.dll",
      "args": [],
      "cwd": "${workspaceFolder}/CoffeeShop/src/CoffeeShop.Identity",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5001"
      }
    },
    {
      "name": "Launch Order Service",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-order",
      "program": "${workspaceFolder}/CoffeeShop/src/CoffeeShop.Order/bin/Debug/net9.0/CoffeeShop.Order.dll",
      "args": [],
      "cwd": "${workspaceFolder}/CoffeeShop/src/CoffeeShop.Order",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5002"
      }
    },
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
